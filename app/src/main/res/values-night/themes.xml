
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SmartSwitch" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/white_bg</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/white_bg</item>
        <item name="android:includeFontPadding">false</item>
<!--
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>
-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">false</item>

    </style>


    <style name="Theme.SmartSwitch" parent="Base.Theme.SmartSwitch" />


    <style name="BottomNavigationTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto
        </item> <!-- Custom font from the font resource -->
        <item name="android:textSize">@dimen/_10ssp</item> <!-- Optional: Adjust text size -->
    </style>


    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/bottom_nav</item>
    </style>




    <style name="BoldTextViewStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="mediumTextViewStyle">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="RegularTextViewStyle">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text_color</item>
    </style>


    <style name="HomeTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>


    <style name="ShapeableImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_12sdp</item>
    </style>


    <style name="ShapeableImageView2" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>

    <style name="ShapeableImageView3" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_4sdp</item>
    </style>
    <style name="MyRatingBar">
        <!-- non-selected color -->
        <item name="colorControlNormal">#383838</item>

        <!-- selected color -->
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="MyFeedBack">
        <!-- non-selected color -->
        <item name="colorControlNormal">#4D4479F2</item>

        <!-- selected color -->
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.Custom.Button" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AdTheme" >
        <item name="android:background">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:windowExitAnimation">@null</item>
        <item name="android:windowEnterAnimation">@null</item>
    </style>
</resources>