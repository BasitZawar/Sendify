<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".presentation.phoneClone.SelectDataToCloneSolFragment">


    <RelativeLayout
        android:id="@+id/adRel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_52sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/adViewContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:titleTextAppearance="@style/mediumTextViewStyle"
        app:navigationIcon="@drawable/ic_back_press"
        app:navigationIconTint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/adRel"
        app:rippleColor="?attr/colorControlHighlight"
        app:title="@string/old_phone">

        <LinearLayout
            android:id="@+id/select_all_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_25sdp"
            android:layout_gravity="end"
            android:visibility="gone"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_all"
                style="@style/mediumTextViewStyle"
                android:textSize="@dimen/_12ssp"
                />

            <CheckBox
                android:id="@+id/checkboxSelectAll"
                android:layout_width="@dimen/_22sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:rippleColor="?attr/colorControlHighlight"
                android:background="@drawable/uncheck_circle"
                android:button="@null" />


        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>

<!--    <com.google.android.material.textview.MaterialTextView-->
<!--        android:id="@+id/topTextView"-->
<!--        style="@style/RegularTextViewStyle"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"-->
<!--        android:layout_marginTop="@dimen/_8sdp"-->
<!--        android:text="@string/send_your_data_to_other_device"-->
<!--        android:textSize="@dimen/_12ssp"-->
<!--        app:layout_constraintBottom_toBottomOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/headerLayout"-->
<!--        app:layout_constraintVertical_bias="0" />-->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMediaItems"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/_8sdp"
        android:visibility="visible"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/data_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        tools:listitem="@layout/item_list_view_clone" />


    <LinearLayout
        android:id="@+id/data_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="@id/sendButton"
        app:layout_constraintTop_toBottomOf="@id/rvMediaItems"
        app:layout_constraintBottom_toTopOf="@id/sendButton"
        android:layout_marginVertical="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_5sdp"
        app:layout_constraintEnd_toStartOf="@id/container_used"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_circle_free"
            android:backgroundTint="#49E28D"
            />

        <TextView
            android:id="@+id/tv_data_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/data_size"
            android:layout_marginStart="@dimen/_5sdp"
            style="@style/RegularTextViewStyle"
            android:textSize="@dimen/_10ssp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_used"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintEnd_toEndOf="@id/sendButton"
        app:layout_constraintTop_toBottomOf="@id/rvMediaItems"
        app:layout_constraintBottom_toTopOf="@id/sendButton"
        android:layout_marginVertical="@dimen/_12sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        app:layout_constraintStart_toEndOf="@+id/data_size"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_circle_free"
            android:backgroundTint="#FEBD66"/>

        <TextView
            android:id="@+id/tv_selected_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/selected_files"
            android:layout_marginStart="@dimen/_5sdp"
            style="@style/RegularTextViewStyle"
            android:textSize="@dimen/_10ssp"
            />

    </LinearLayout>




    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendButton"
        style="@style/mediumTextViewStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_38sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_16sdp"
        android:backgroundTint="@color/background_selector"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:letterSpacing="0"
        android:text="@string/send"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:enabled="false"
        android:textSize="@dimen/_13ssp"
        app:cornerRadius="@dimen/_25sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="@color/ripple_color" />

</androidx.constraintlayout.widget.ConstraintLayout>